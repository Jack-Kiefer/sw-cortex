{
  "name": "sw-cortex",
  "version": "1.0.0",
  "description": "Personal work intelligence platform - tasks, databases, Slack, workflows",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx src/api/server.ts",
    "dev:all": "npm run dev:api & npm run dev",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "task:serve": "tsx src/mcp-servers/task-manager/index.ts",
    "github:serve": "tsx src/mcp-servers/github/index.ts",
    "db:serve": "tsx src/mcp-servers/db/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "qdrant:init": "tsx scripts/qdrant-init.ts",
    "qdrant:init-discoveries": "tsx scripts/init-discoveries-collection.ts",
    "qdrant:status": "tsx scripts/qdrant-status.ts",
    "slack:sync": "tsx scripts/sync-slack-messages.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/rest": "^22.0.1",
    "@qdrant/js-client-rest": "^1.8.0",
    "@slack/bolt": "^3.17.0",
    "@slack/web-api": "^7.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "better-sqlite3": "^9.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.0",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.9.0",
    "openai": "^6.15.0",
    "pg": "^8.11.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "ssh2": "^1.15.0",
    "tailwindcss": "^4.1.18",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ssh2": "^1.15.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.57.0",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.52.0",
    "vite": "^5.2.0",
    "vitest": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
