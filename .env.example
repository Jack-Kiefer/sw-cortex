# sw-cortex Environment Variables
# Copy to .env.local and fill in values
# Run `npm run setup` for interactive configuration

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Your name (used in documentation and prompts)
SW_CORTEX_USER=

# Project paths (auto-detected from cwd if not set)
# SW_CORTEX_ROOT=/path/to/sw-cortex
# SW_CORTEX_LOGS=/path/to/sw-cortex/logs
# SW_CORTEX_WORKFLOWS=/path/to/sw-cortex/workflows/n8n

# =============================================================================
# GITHUB REPOSITORIES
# =============================================================================

# JSON array of repos to access via MCP (read-only)
# Format: [{"owner":"org","repo":"name","description":"optional"}]
# Example: [{"owner":"myorg","repo":"myapp","description":"Main application"}]
GITHUB_REPOS=[]

# =============================================================================
# N8N CREDENTIALS (Optional - for workflow generation)
# =============================================================================

# JSON object with n8n credential IDs for workflow templates
# Get IDs from your n8n instance's credentials page
# Example: {"odooPostgres":{"id":"xxx","name":"Odoo"},"slackApi":{"id":"yyy","name":"Slack"}}
N8N_CREDENTIALS=

# =============================================================================
# DATABASES (MySQL)
# =============================================================================

# WishDesk Database
WISHDESK_DB_HOST=
WISHDESK_DB_PORT=3306
WISHDESK_DB_USER=
WISHDESK_DB_PASSWORD=
WISHDESK_DB_NAME=
WISHDESK_USE_SSH=false

# Live SugarWish Database
SUGARWISH_DB_HOST=
SUGARWISH_DB_PORT=3306
SUGARWISH_DB_USER=
SUGARWISH_DB_PASSWORD=
SUGARWISH_DB_NAME=
SUGARWISH_USE_SSH=false

# =============================================================================
# DATABASES (PostgreSQL)
# =============================================================================

# Odoo Database
ODOO_DB_HOST=
ODOO_DB_PORT=5432
ODOO_DB_USER=
ODOO_DB_PASSWORD=
ODOO_DB_NAME=
ODOO_USE_SSH=false

# Retool Database
RETOOL_DB_HOST=
RETOOL_DB_PORT=5432
RETOOL_DB_USER=
RETOOL_DB_PASSWORD=
RETOOL_DB_NAME=
RETOOL_USE_SSH=false

# =============================================================================
# SSH TUNNEL (for remote database access)
# =============================================================================

SSH_BASTION_HOST=
SSH_BASTION_USER=
SSH_BASTION_PORT=22
SSH_KEY_PATH=~/.ssh/id_rsa

# =============================================================================
# SLACK
# =============================================================================

SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_USER_ID=U0123456789

# =============================================================================
# QDRANT (Vector Database)
# =============================================================================

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# =============================================================================
# N8N
# =============================================================================

N8N_HOST=http://localhost:5678
N8N_API_KEY=

# =============================================================================
# GITHUB
# =============================================================================

GITHUB_TOKEN=
